#app {
  font-family: "Avenir", Helvetica, Arial, sans-serif;
  text-align: center;
  color: #2c3e50;
}

#nav {
  padding: 30px;

  & a {
    font-weight: bold;
    color: lightblue;
  }

  & a.router-link-exact-active {
    color: lightcoral;
  }
}

@media only screen and (max-width: 480px) {
  #nav {
    padding: 30px;

    & a {
      font-weight: bold;
      color: burlywood;
    }

    & a.router-link-exact-active {
      color: orchid;
    }
  }
}
